<script>
    Modernizr.load([
        {
            test: Modernizr.inlinesvg,
            nope: [
                '/frontend/css/legacy/fallbacks/no-inlinesvg.css',
                '/frontend/js/svgeezy.min.js'
            ],
            callback : function (url, result, key) {
                if(key == 1) {
                    svgeezy.init('png');
                }
            }
        },
        {
            test: Modernizr.input.placeholder,
            nope: '/frontend/js/jquery.placeholder.js',
                {% endjavascripts %}
            callback : function (url, result, key) {
                $('input, textarea').placeholder();
            }
        }
    ]);
</script>
